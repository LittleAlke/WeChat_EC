/* pages/detail/index.wxss */
.detail{
  display: flex;
  flex-direction: column;
  width: 100%;
}

.slider{
  width: 100%;
  background-color: #fff;
  height: auto;
  box-sizing: border-box;
  border-top: 2rpx solid #e8e8ed;
  border-bottom: 2rpx solid #e8e8ed;
}

.swiper-item{
  display: block;
  width: 100%;
  height: 820rpx;
}

.proinfo{
  box-sizing: border-box;
  width: 100%;
  padding-bottom: 4rpx;
}

.text-wrap, .price-wrap{
  background-color: #fff;
  padding: 20rpx;
}

.text-wrap text{
  color: #333;
  overflow: hidden;
  font-size: 32rpx;
  font-weight: 600;
}

.price-wrap text{
  color: #e4393c;
  font-size: 36rpx;
  font-weight: 700;
}

/* 组件 */
.wrap{
  background-color: #fff;
  padding: 30rpx 20rpx;
  border-top: 2rpx solid #e8e8ed;
  border-bottom: 2rpx solid #e8e8ed;
  font-size: 28rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
}

.title{
  display: inline-block;
  width: 10%;
  color: #999;
}

.desc{
  display: inline-block;
  width: 80%;
}

.icon{
  display: inline-block;
  width: 10%;
  font-weight: 700;
  text-align: right;
}

.btn-bar{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  background-color: hsla(0, 0%, 100%, .95);
  height: 100rpx;
  display: flex;
  flex-direction: row;
  border-top: 2rpx solid #e8e8ed;
}

.icon-cart{
  position: relative;
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #666;
}

.icon-cart image{
  width: 80rpx;
  height: 80rpx;
}

.cart-btn{
  width: 50%;
}

.cart-btn button{
  border: none;
  outline: none;
  background-color: #e4393c;
  color: #fff;
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 0;
}

.badge{
  position: absolute;
  top: 0;
  right: 140rpx;
  border-radius: 20rpx;
  color: #f56c6c;
  display: inline-block;
  font-size: 22rpx;
  height: 30rpx;
  line-height: 30rpx;
  padding: 0 10rpx;
  text-align: center;
  white-space: nowrap;
  border: 2rpx solid #f56c6c;
}